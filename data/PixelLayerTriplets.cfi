replace myTTRHBuilderWithoutAngle4PixelTriplets.StripCPE = "Fake"
replace myTTRHBuilderWithoutAngle4PixelTriplets.ComponentName = "TTRHBuilderWithoutAngle4PixelTriplets"

es_module pixellayertriplets =  PixelLayerTripletsESProducer {

  string ComponentName = "PixelLayerTriplets"

  vstring layerList = { "BPix1+BPix2+BPix3",
                        "BPix1+BPix2+FPix1_pos",
                        "BPix1+BPix2+FPix1_neg",
                        "BPix1+FPix1_pos+FPix2_pos",
                        "BPix1+FPix1_neg+FPix2_neg"
  }
  PSet BPix = {
    string HitProducer = "siPixelRecHits"
    string TTRHBuilder = "TTRHBuilderWithoutAngle4PixelTriplets"
    untracked bool useErrorsFromParam = true
    double hitErrorRPhi = 0.0027
    double hitErrorRZ   = 0.0060
