  PSet FPix = {
    string HitProducer = "siPixelRecHits"
    string TTRHBuilder = "TTRHBuilderWithoutAngle4PixelTriplets"
    untracked bool useErrorsFromParam = true
    double hitErrorRPhi = 0.0051
    double hitErrorRZ   = 0.0036
  }
